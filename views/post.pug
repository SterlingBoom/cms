include includes/bigjara-head.pug
block content 
body.bg-fainted  
  section(class="d-wrapper")
    include includes/sidebar.pug 
    main.main
      div.wrap.bg-dark-faint.justify-content-between.admin-nav.m-b-1 
        div 
          p.white-text Welcome back
        div.relative 
          div.has-dropdown 
            a(class="dropdown-button" href="#" style="color:#fff!important")
              i.fa.fa-user.circle-content.bg-white 
              span Hello , Admin 
              i.fa.fa-chevron-down 
            div.is-drop-content 
              a(href="" class="") Profile 
              a(href="" class="") Post 
              a(href="" class="") Settings 
              a(href="" class="") Logout 
      div.wrapper 
        div.wrap.justify-content-between 
          div.wrap-md-8 
            div.m-r-1 
              p Edit page #[a(href="#" class="") Add new] 
              form(class="" name="" method="")
                input(class="input input-border-faint pad-input m-b-1" type="text" name="title" id="title" required placeholder="Enter post title")
                p #[strong permalink:] #[a(href="") http://localhost/posts/demo] 
                div 
                  div.wrap.justify-content-between.m-b-2 
                    div 
                      a(href="" class="button no-border no-outline bg-white radius-5 shadow") #[i.fa.fa-music] Add media 
                    div 
                      a(href="" class="m-r-1 no-border no-outline bg-fainted shadow pad-10" id="visual") Visual
                      a(href="" class="no-border no-outline bg-dark white-text shadow pad-10" id="text") Text 
                  div.wrap-justify-content-between.shadow.m-b-1 
                    div.wrap.justify-content-between.editor-icons
                      div.editor-wrap-1 
                        button(class="mw-r-1 no-border no-outline" id="bold") #[i.fa.fa-bold] 
                      div.editor-wrap-1 
                        button(class="mw-r-1 no-border no-outline" id="italic") #[i.fa.fa-italic] 
                      div.editor-wrap-1 
                        button(class="mw-r-1 no-border no-outline" id="delete") #[i.fa.fa-trash] 
                      div.editor-wrap-1 
                        button(class="mw-r-1 no-border no-outline" id="indent") #[i.fa.fa-indent] 
                      div.editor-wrap-1 
                        button(class="mw-r-1 no-border no-outline" id="outdent") #[i.fa.fa-outdent]  
                      //div.editor-wrap-1 
                        button(class="mw-r-1 no-border no-outline") #[i.fa.fa-quote-left] 
                      div.editor-wrap-1 
                        button(class="mw-r-1 no-border no-outline" id="strikeThrough") #[i.fa.fa-strikethrough] 
                      div.editor-wrap-1 
                        button(class="mw-r-1 no-border no-outline" id="justifyLeft") #[i.fa.fa-align-left] 
                      div.editor-wrap-1 
                        button(class="mw-r-1 no-border no-outline" id="justifyCenter") #[i.fa.fa-align-center]
                      div.editor-wrap-1 
                        button(class="mw-r-1 no-border no-outline" id="justifyRight") #[i.fa.fa-align-right]
                      div.editor-wrap-1 
                        button(class="mw-r-1 no-border no-outline" id="subscript") #[i.fa.fa-subscript]
                      div.editor-wrap-1 
                        button(class="mw-r-1 no-border no-outline" id="superscript") #[i.fa.fa-superscript] 
                      div.editor-wrap-1 
                        button(class="mw-r-1 no-border no-outline" id="insertUnorderedList") #[i.fa.fa-list-ul] 
                      div.editor-wrap-1 
                        button(class="mw-r-1 no-border no-outline" id="insertOrderedList") #[i.fa.fa-list-ol] 
                      div.editor-wrap-1(style="position:relative") 
                        button(class="mw-r-1 no-border no-outline" id="createLink") #[i.fa.fa-link] 
                        div#link.d-nothing(style="position:absolute;top:0;left:-120px;background:#f00;z-index:3" )
                          input(class="input input-border-faint" id="linkHref"  style="background:#fff;border:1px solid #000") 
                          
                      div.editor-wrap-1 
                        button(class="mw-r-1 no-border no-outline" id="insertImage") #[i.fa.fa-picture-o]
                      //div.editor-wrap-1(style="position:relative")
                        button(class="mw-r-1 no-border no-outline" id="heading") #[i ] H1 
                        select(style="position:absolute;top:0;left:0;" class="input input-border-faint d-nothing" id="headings") 
                          option(value="H1") H1 
                          option(value="H2") H2 
                          option(value="H3") H3 
                          option(value="H4") H4 
                          option(value="H5") H5 
                          option(value="H6") H6 
                      //div.editor-wrap-1 
                        button(class="mw-r-1 no-border no-outline" id="insertHorizontalRule")  hr
                      //div.editor-wrap-1 
                        button(class="mw-r-1 no-border no-outline" id="insertBrOnReturn") br
                      div.editor-wrap-1
                        button(class="no-border no-outline" id="insertParagraph") #[i.fa.fa-paragraph] 
                      div.editor-wrap-1 
                        button(class=" no-border no-outline" id="underline") #[i.fa.fa-underline]
                      div.editor-wrap-1(style="position:relative") 
                        button(class=" no-border no-outline" id="fontName") #[i.fa.fa-font]
                        select(style="position:absolute;top:0;left:0;" class="input input-border-faint d-nothing" id="fonts" selected="Arial") 
                          option(value="Arial" selected) Arial
                          option(value="Arial") Arial
                          option(value="Georgia") Georgia 
                          option(value="Times New Roman") Times New Roman 
                          option(value="Verdana") Verdana 
                          option(value="monospace") Monospace 
                          option(value="Courier") Courier
                      div.editor-wrap-1(style="position:relative")  
                        button(class=" no-border no-outline" id="fontSize") 14px
                        select(style="position:absolute;top:0;left:0;" class="input input-border-faint d-nothing" id="size" selected="1") 
                          option(value="1" selected) 1
                          option(value="2") 2
                          option(value="3") 3
                          option(value="4") 4
                          option(value="5") 5
                          option(value="6") 6 
                          option(value="7") 7
                      div.editor-wrap-1(style="position:relative")  
                        button(class=" no-border no-outline" id="fillTrigger") Fill 
                        select(style="position:absolute;top:0;left:0;" class="input input-border-faint d-nothing" id="fill" selected="#f00") 
                          option(value="#f00" selected) #[span(style="background:#f00;padding : 8px 12px;color:#fff") ] Red
                          option(value="blue") #[div(style="background:blue;padding : 8px 12px;color:#fff;width=10px;height:10px") ] Blue
                          option(value="green") #[span(style="background:green;padding : 8px 12px;color:#fff") ] Green
                          option(value="yellow") #[span(style="background:yellow;padding : 8px 12px;color:#fff") ] Yellow
                          option(value="orange") #[span(style="background:orange;padding : 8px 12px;color:#fff") ] Orange
                          option(value="pink") #[span(style="background:pink;padding : 8px 12px;color:#fff") ] Pink
                          option(value="purple") #[span(style="background:purlpe;padding : 8px 12px;color:#fff") ] Purple
                           option(value="white") #[span(style="background:purlpe;padding : 8px 12px;color:#fff") white ] 
                      div.editor-wrap-1(style="position:relative")  
                        button(class=" no-border no-outline" id="colorTrigger") Color
                        select(style="position:absolute;top:0;left:0;" class="input input-border-faint d-nothing" id="color" selected="#f00") 
                          option(value="#f00" selected) #[span(style="background:#f00;padding : 8px 12px;color:#fff") ] Red
                          option(value="blue") #[span(style="background:blue;padding : 8px 12px;color:#fff") ] Blue
                          option(value="green") #[span(style="background:green;padding : 8px 12px;color:#fffwidth=10px;height:10px") ] Green
                          option(value="yellow") #[span(style="background:yellow;padding : 8px 12px;color:#fff") ] Yellow
                          option(value="orange") #[span(style="background:orange;padding : 8px 12px;color:#fff") ] Orange
                          option(value="pink") #[span(style="background:pink;padding : 8px 12px;color:#fff") ] Pink
                          option(value="purple") #[span(style="background:purlpe;padding : 8px 12px;color:#fff") ] Purple
                          option(value="white") #[span(style="background:purlpe;padding : 8px 12px;color:#fff") ] White
                      div.editor-wrap-1 
                        button(class=" no-border no-outline") #[i.fa.fa-share] 
                      div.editor-wrap-1 
                        button(class=" no-border no-outline" id="removeFormat") #[i.fa.fa-forward]
                      //- div.editor-wrap-1 
                      //-   button(class=" no-border no-outline") #[i.fa.fa-copy]
                      //- div.editor-wrap-1 
                      //-   button(class=" no-border no-outline") #[i.fa.fa-cut]
                      //- div.editor-wrap-1 
                      //-   button(class=" no-border no-outline") #[i.fa.fa-paste] 
                      //- div.editor-wrap-1 
                      //-   button(class=" no-border no-outline") #[i.fa.fa-question-circle]
                  div(class="content-area editor-style  no-margin" contenteditable="true" id="content")  
                  div.wrap.justify-content-between.word-counter.m-b-1 
                    div 
                      p Word count #[strong.words 320] 
                    div 
                      p Last modified by Adeleke Bright on Saturday 26th September , 2020
                  div(style="text-align:right")
                    button(class="no-border no-outline button bg-blue-dark white-text shadow radius-5" id="save") Save post 
                  //div 
                    h3.label.uppercase #[strong Search Engine Optimizer] 
                    label(for="description" class="label") Description 
                    input(class="input input-border-faint pad-input m-b-1" type="text" name="description" id="description")
                    label(for="description" class="label") Keywords  
                    input(class="input input-border-faint pad-input m-b-1" type="text" name="keywords" id="keywords") 
                    label(for="description" class="label") Tags 
                    input(class="input input-border-faint pad-input m-b-1" type="text" name="tags" id="tags")
          div.wrap-md-4.shadow.bg-white(style="padding:12px;padding-top:0") 
            div 
              p #[strong Search Engine Optimizer] 
              input(class="input input-border-faint pad-input m-b-1" type="text" name="description" id="description" placeholder="description")
              label(for="description" class="label") Keywords  
              input(class="input input-border-faint pad-input m-b-1" type="text" name="keywords" id="keywords") 
              label(for="description" class="label") Tags 
              input(class="input input-border-faint pad-input m-b-1" type="text" name="tags" id="tags") 
              label(for="categories" class="label") Category 
              select(class="input input-border-faint pad-input m-b-1" name="category" id="category") 
                option(value="" ) [Select a category]  
                if categories.length > 0 
                  each category in categories 
                    option(value=category._id) #{category.name}
              if posts.length > 0 
                h2 Recent Blog Post
                each post , i in posts 
                  p.label #{`${(i + 1)}`} #[a(href=`/posts/${post.title}` class=" dark-text  border-bottom-faint") #{post.title} ]
  script(src="/js/blog.js" type="module")